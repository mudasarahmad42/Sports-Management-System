@model GCUSMS.ViewModels.EditTeamVM

@{ ViewData["Title"] = "Team Details"; }

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (Model != null)
{
    <div class="m-3">

        @if (@ViewBag.PlayersSelected == Model.MaximumPlayers)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Team is Full</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (@ViewBag.PlayersSelected > Model.MaximumPlayers)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Maximum limit of players in this team is @Model.MaximumPlayers</strong> <br />
                You have added <strong>@ViewBag.PlayersSelected</strong> players in this team.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <h2 class="alert-heading">
            Details of <span class="text-primary">@Model.TeamName</span>
        </h2>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Team Logo
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/TeamsLogo/@Model.LogoImagePath" class="rounded float-left" style="max-height:200px" alt="User Image">
            </dd>

            <dt class="col-sm-2">
                Team Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamName)
            </dd>
            <dt class="col-sm-2">
                Team Level
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamLevel)
            </dd>

            <dt class="col-sm-2">
                Team Sports
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamSports)
            </dd>

            <dt class="col-sm-2">
                Players In Team
            </dt>

            <dd class="col-sm-10">
                @ViewBag.PlayersSelected
            </dd>

            <dt class="col-sm-2">
                Active Players
            </dt>

            <dd class="col-sm-10">
                @ViewBag.ActivePlayers
            </dd>

            <dt class="col-sm-2">
                Actions
            </dt>

            <dd class="col-sm-10">
                <a class="btn btn-primary btn-sm" asp-controller="Team" asp-action="AddPlayers" asp-route-id="@Model.TeamId">
                    <i class="fa fa-plus-square"></i> Add Players
                </a>

                <a class="btn btn-primary btn-sm" asp-controller="Team" asp-action="PlayersList" asp-route-id="@Model.TeamId">
                    <i class="fa fa-list"></i> Players List
                </a>

                <a class="btn btn-primary btn-sm" asp-controller="Team" asp-action="ParticipatedTournaments" asp-route-id="@Model.TeamId">
                    <i class="fa fa-trophy"></i> Participated Tournaments
                </a>
            </dd>
        </dl>

        <hr />

        <h1 class="text-info">Edit Team Details</h1>


        <form asp-controller="Team" asp-action="EditTeam" method="post" class="mt-3" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            @*Use hidden input elements to store tournament id, team id
                which we need when we submit the form and update data in the database*@
            <input asp-for="TeamId" readonly hidden />

            <div class="form-group row">
                <label asp-for="Image" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Image" class="form-control" placeholder="Team Name">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TeamName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TeamName" class="form-control" placeholder="Team Name">
                    <span asp-validation-for="TeamName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TeamLevel" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="TeamLevel" id="isDepartmental" onchange="valueChanged()" class="form-control">
                        <option value="" selected disabled hidden>Select Level</option>
                        <option value="UNIVERSITY">University</option>
                        <option value="DEPARTMENTAL">Departmental</option>
                    </select>
                    <span asp-validation-for="TeamLevel" class="text-danger"></span>
                </div>
            </div>

            <div id="showDepartment">
                <div class="form-group row">
                    <label asp-for="DepartmentName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="DepartmentName" id="DepartmentRequired" class="form-control" required>
                            <option value="" selected disabled hidden>Select Department</option>
                            <option value="Computer Science">Computer Science</option>
                            <option value="Physical Education and Sports Sciences">Physical Education and Sports Sciences</option>
                            <option value="Persian">Persian</option>
                            <option value="English">English</option>
                            <option value="Punjabi">Punjabi</option>
                            <option value="Urdu">Urdu</option>
                            <option value="Chemistry">Chemistry</option>
                            <option value="Biotechnology">Biotechnology</option>
                            <option value="Botany">Botany</option>
                            <option value="Psychology">Psychology</option>
                            <option value="Zoology">Zoology</option>
                            <option value="Mathematics">Mathematics</option>
                            <option value="Physics">Physics</option>
                            <option value="Statistics">Statistics</option>
                            <option value="Electrical Engineering">Electrical Engineering</option>
                            <option value="Fine Arts">Fine Arts</option>
                        </select>
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TeamSports" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="TeamSports" class="form-control">
                        <option value="" selected disabled hidden>Select Sports</option>
                        <option value="Cricket">Cricket</option>
                        <option value="Football">Football</option>
                        <option value="Hockey">Hockey</option>
                        <option value="Badminton">Badminton</option>
                        <option value="Squash">Squash</option>
                        <option value="Gymnastics">Gymnastics</option>
                        <option value="Weight Lifting">Weight Lifting</option>
                        <option value="Tug of War">Tug of War</option>
                    </select>
                    <span asp-validation-for="TeamSports" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="MaximumPlayers" class="col-sm-2 col-form-label">Expected Players</label>
                <div class="col-sm-10">
                    <input asp-for="MaximumPlayers" class="form-control">
                    <span asp-validation-for="MaximumPlayers" class="text-danger"></span>
                </div>
            </div>

            <div class="m-4 d-flex justify-content-center">
                <a class="btn btn-danger" asp-action="DeleteTeam" asp-route-id="@Model.TeamId" onclick="return confirm('Team @Model.TeamName is being deleted permanently!')">
                    Delete <i class="fa fa-trash"></i>
                </a>
                &nbsp;

                <a class="btn btn-outline-secondary" asp-action="TeamList">
                    <i class="fa fa-arrow-left"></i> Go Back
                </a>
                &nbsp;

                <button type="submit" class="btn btn-success">Update <i class="fa fa-refresh"></i></button>
            </div>

        </form>
    </div>
}
else
{
    <div class="text-center mt-5">

        <span class="fas fa-exclamation-triangle text-red" style="font-size:17rem;"></span>
        <h1 class="m-5">Something Went Wrong</h1>
        <p class="text-muted">
            Which Team you are trying to find details of? What is the ID of the this Team? <br />Is there something Wrong with the database.<br />
            Go back and try again if error persists <br />
            Please Contact IT Team to resolve this issue.
        </p>
        <a class="btn btn-outline-secondary" asp-action="TeamsList">
            <i class="fa fa-arrow-left"></i> Go Back
        </a>

    </div>
}

@section Scripts
{
    <script>
        //This function check value of checkboxes on change
        function valueChanged() {
            //Show when checkbox is clicked
            if ($('#isDepartmental').val() == 'DEPARTMENTAL') {
                $("#showDepartment").fadeIn();
                $("#DepartmentRequired").prop('required', true);
            }
            else {
                $("#DepartmentRequired").removeAttr('required')
                $("#showDepartment").hide();
            }
        };


        //Check value of checkboxes coming from database
        if ($('#isDepartmental').val() == 'DEPARTMENTAL') {
            $('showDepartment').fadeIn();
            $("#DepartmentRequired").prop('required', true);
        } else {
            $("#DepartmentRequired").removeAttr('required')
            $('#showDepartment').hide();
        }

        if ($('#isDepartmental').val() == 'DEPARTMENTAL') {
            $("#showDepartment").fadeIn();
            $("#DepartmentRequired").prop('required', true);
        }
        else {
            $("#DepartmentRequired").removeAttr('required')
            $("#showDepartment").hide();
        }
    </script>
}