<section class="section-blogs">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <h1 class="gallery-title">Blogs</h1>
        </div>

        <div class="row d-flex justify-content-center align-items-center">
            <p class="mb-3">We are always publishing something new on our application. Read our blogs to know more</p>
        </div>

        <div class="container">
            <div class="row d-flex justify-content-center align-items-center">
                @if (Model.Blog.Count() == 0)
                {
                        <div class="row d-block justify-content-center align-items-center m-5" style="color: #722121;">
                            <i class="fas fa-pen" style="font-size: 20rem; "></i>
                            <h3 class="m-5">Nothing Found!!!</h3>
                        </div>
                }

                @foreach (var Blogs in Model.Blog.OrderBy(x => Guid.NewGuid()).Take(9))
                {
                    <div class="card m-2" style="width: 22rem;">
                        <img src="~/images/Blogs/@Blogs.BlogImagePath" alt="@Blogs.Title" class="card-img-top-blogpage">
                        <div class="card-body">
                            <h4 class="card-title">
                                @if (Blogs.Title.Length > 20)
                                {
                                    @(Blogs.Title.Substring(0, 18) + "...")
                                }
                                else
                                {
                                    @(Blogs.Title)
                                }
                            </h4>
                            <p class="text-muted">
                                @Blogs.CreatedOn.ToString("MMMM dd, yyyy")
                                |
                                @if (@Blogs.Author.FirstName.Length > 10)
                                {
                                    @(@Blogs.Author.FirstName.Substring(0, 1) + "...")
                                }
                                else
                                {
                                    @(@Blogs.Author.FirstName)
                                }

                                @if (@Blogs.Author.LastName != null)
                                {
                                    @if (@Blogs.Author.LastName.Length > 10)
                                    {
                                        @(@Blogs.Author.LastName.Substring(0, 7) + "...")
                                    }
                                    else
                                    {
                                        @(@Blogs.Author.LastName)
                                    }
                                }
                            </p>
                            <p class="card-text">
                                @if (@Blogs.Excerpt.Length > 34)
                                {
                                    @(@Blogs.Excerpt.Substring(0, 34) + "...")
                                }
                                else
                                {
                                    @(@Blogs.Excerpt)
                                }
                            </p>

                            <br />
                            <a class="btn btn-outline-maroon" asp-action="Post" asp-controller="Blog" asp-route-id="@Blogs.BlogID">Read More</a>
                        </div>
                    </div>
                }

                <div class="container">
                    <div class="row d-flex justify-content-center align-items-center">
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-maroon m-4">See more blogs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-contact">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <h1 class="gallery-title">Contact Us</h1>
        </div>

        <div class="row d-flex justify-content-center align-items-center">
            <p class="mb-3">Feel free to provide your feedback</p>
        </div>
        <form id="parsley-form" data-parsley-validate="" asp-action="SubmitFeedback" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="Feedback.Name" class="form-control" placeholder="Name" data-parsley-required-message="Name is Required" required="" maxlength="25" data-parsley-pattern="^[a-zA-Z ]+$" data-parsley-pattern-message="Only use english alphabets" data-parsley-trigger="focusin focusout" >

                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="Email">Email address</label>
                        <input asp-for="Feedback.Email" class="form-control" placeholder="Enter email" required="" data-parsley-type="email" data-parsley-trigger="focusin focusout" data-parsley-required-message="Email is required." >
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label>Message</label>
                        <textarea asp-for="Feedback.FeedbackMessage" class="form-control" rows="3" data-parsley-trigger="keydown focusin focusout" data-parsley-length="[1, 1500]" data-parsley-length-message="Maximum limit of 1500 characters is allowed" data-parsley-required-message="Write you feedback here" required=""></textarea>
                    </div>

                    <div class="row d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-maroon m-4">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

