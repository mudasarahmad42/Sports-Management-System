<section class="section-gallery">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <h1 class="gallery-title">Gallery</h1>
        </div>

        <div class="row d-flex justify-content-center align-items-center">
            <p class="mb-3">We have huge collection of images to share with the world.</p>
        </div>

        <div class="container">
            <div id="lightgallery" class="row justify-content-center align-items-center mr-0 ml-0">

                @if (Model.Gallery.Count() == 0)
                {
                    <div class="row d-block justify-content-center align-items-center m-5" style="color: #722121;">
                        <i class="fa fa-image" style="font-size: 20rem; "></i>
                        <h3 class="m-5">Nothing Found!!!</h3>
                    </div>
                }

                @foreach (var Images in Model.Gallery.OrderBy(x => Guid.NewGuid()).Take(9))
                {
                    <a href="~/images/@Images.ImagePath" data-sub-html=".caption" class="col-xs-4 gallery-images">
                        <img class="gallery-image-item" src="~/images/@Images.ImagePath" alt="@Images.ImageName">
                        <div class="caption">
                            <h4>@Images.ImageName</h4><p>@Images.Description</p>
                        </div>
                    </a>
                }
            </div>
        </div>

        <div class="container">
            <div class="row d-flex justify-content-center align-items-center">
                <a asp-controller="Gallery" asp-action="Index" class="btn btn-maroon m-4">View Gallery</a>
