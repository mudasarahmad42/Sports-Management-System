@model GCUSMS.ViewModels.FeedbackVM

@{ ViewData["Title"] = "Feedback Details"; }

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (Model != null)
{
    <h1 class="text-center mb-4">Feedback Details</h1>


    <div class="m-3">
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>

            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>

            <dt class="col-sm-2">
                Date Submitted
            </dt>
            <dd class="col-sm-10">
                @Model.DateSubmitted.ToString("dddd, dd MMMM yyyy")
            </dd>

            <dt class="col-sm-2">
                Message
            </dt>
            <dd class="col-sm-10">
               <pre>@Model.FeedbackMessage</pre>
            </dd>
        </dl>
    </div>

    <div class="text-center p-3 m-3">
        <a class="btn btn-outline-secondary" asp-action="Feedback">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
        <a class="btn btn-outline-danger" asp-action="DeleteFeedback" asp-route-id="@Model.FeedbackID" onclick="return confirm('Feedback is being deleted?')">
            Delete <i class="fa fa-trash"></i>
        </a>
    </div>
}
else
{
    <div class="text-center mt-5">

        <span class="fas fa-exclamation-triangle text-red" style="font-size:17rem;"></span>
        <h1 class="m-5">Something Went Wrong</h1>
        <p class="text-muted">
            Record with id does not exist!
        </p>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="fa fa-arrow-left"></i> Go Back
        </a>

    </div>
}
