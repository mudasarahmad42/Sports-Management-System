@model List<GCUSMS.ViewModels.TeamPlayerVM>

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@{
    ViewData["Title"] = @ViewBag.TeamName + "'s Players";
}

<h1 class="text-center mb-4">@ViewBag.TeamName Players</h1>

<a class="btn btn-outline-secondary" asp-controller="DepartmentalTeam" asp-action="EditDepartmentalTeam" asp-route-id="@ViewBag.TeamId">
    <i class="fa fa-arrow-left"></i> Go Back
</a>

<a class="btn btn-outline-success" asp-controller="DepartmentalTeam" asp-action="DepartmentalActivePlayersList" asp-route-id="@ViewBag.TeamId">
    Show Only Active Players <i class="fa fa-arrow-right"></i>
</a>
<table id="TableData" class="display nowrap table table-striped table-bordered hover" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>
                Profile Image
            </th>

            <th>
                Name
            </th>
            <th>
                Roll number
            </th>

            <th>
                Department
            </th>

            <th>
                Role
            </th>

            <th>
                Active
            </th>

            <th class="text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    <img class="img-thumbnail ml-4 mt-3" src="~/images/Users/@item.Player.ProfileImagePath" style="max-height:150px; max-width:150px;" alt="" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Player.FirstName) @Html.DisplayFor(modelItem => item.Player.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Player.RollNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Player.DepartmentName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PlayerRole)
                    @if (item.CaptainType == "Captain")
                    {
                        <span> (Captain)</span>
                    }
                    else if (item.CaptainType == "Vice Captain")
                    {
                        <span> (Vice Captain)</span>
                    }
                </td>

                <td>
                    @if (item.IsActive == true)
                    {
                        <span class="badge badge-success">YES</span>
                    }
                    else if (item.IsActive == false)
                    {
                        <span class="badge badge-danger">NO</span>
                    }
                </td>

                <td>
                    <a class="btn btn-primary" asp-controller="DepartmentalTeam" asp-action="DepartmentalPlayerDetails" asp-route-id="@item.TeamPlayerId">
                        Details <i class="fa fa-search"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#TableData').DataTable({

                responsive: {
                    details: {
                        display: $.fn.dataTable.Responsive.display.modal({
                            header: function (row) {
                                var data = row.data();
                                return data[1]
                            }
                        }),
                        renderer: $.fn.dataTable.Responsive.renderer.tableAll()
                    }
                },

                dom: 'Bfrtip',
                buttons: [
                    { extend: 'pdf', className: 'btn btn-primary' },
                    { extend: 'print', className: 'btn btn-primary' },
                    { extend: 'copy', className: 'btn btn-primary' },
                    { extend: 'csv', className: 'btn btn-primary' },
                    { extend: 'excel', className: 'btn btn-primary' }
                ]
            });
        });
    </script>
}
