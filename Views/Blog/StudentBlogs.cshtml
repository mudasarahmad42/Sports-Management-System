@model IEnumerable<GCUSMS.ViewModels.BlogVM>

@{ ViewData["Title"] = @ViewBag.AuthorName +  "'s Blogs List"; }

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (Model != null)
{
    <div class="m-3">

        <h2 class="alert-heading">
            <span class="text-primary">@ViewBag.AuthorName<text>s'</text></span> Blogs
        </h2>
        <hr />
        <div class="row">
            <div class="col-12">
                <div class="info-box bg-blue">
                    <span class="info-box-icon"><i class="fa fa-list"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">@Model.Count()</span>
                        <span class="info-box-number">Total Comments</span>
                    </div>
                </div>
            </div>
            <div class="clearfix visible-sm-block"></div>
        </div>
        <hr />

        <div>
            <table id="TableData" class="display nowrap table table-striped table-bordered hover" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Excerpt</th>
                        <th scope="col">Author Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blogs in Model)
                    {
                    <tr>
                        <td><a asp-controller="Blog" asp-action="Post" asp-route-id="@blogs.BlogID">@blogs.Title &nbsp;<i class="fas fa-chevron-right"></i></a></td>
                        <td>
                            @if (blogs.Excerpt.Length > 80)
                            {
                                @(blogs.Excerpt.Substring(0, 80) + "...")
                            }
                            else
                            {
                                @blogs.Excerpt
                            }
                            </td>
                        <td>
                            @if (@blogs.Author != null)
                            {
                                @blogs.Author.FirstName @blogs.Author.LastName
                            }

                        </td>
                        <td>
                            <form method="post" asp-controller="Blog" asp-action="DeleteBlogPostAdmin" asp-route-id="@blogs.BlogID">
                                <button class="btn btn-danger" onclick="return confirm('Blog is being deleted!')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="text-center mt-5">

        <span class="fas fa-exclamation-triangle text-red" style="font-size:17rem;"></span>
        <h1 class="m-5">Something Went Wrong</h1>
        <p class="text-muted">
            Record with id does not exist!
        </p>
        <a class="btn btn-outline-secondary" asp-action="StudentEquipmentList">
            <i class="fa fa-arrow-left"></i> Go Back
        </a>

    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#TableData').DataTable({

                responsive: {
                    details: {
                        display: $.fn.dataTable.Responsive.display.modal({
                            header: function (row) {
                                var data = row.data();
                                return data[0]
                            }
                        }),
                        renderer: $.fn.dataTable.Responsive.renderer.tableAll()
                    }
                },
            });
        });
    </script>
}
